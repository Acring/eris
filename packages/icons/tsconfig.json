{
  "extends": "@xsky/eris-tsconfig-ui/react-library.json",
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "@/icons/*": ["./src/icons/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": [".eslintrc.cjs", "./src/**/*"],
  "exclude": ["dist", "build", "node_modules"]
}
