{
  "name": "@xsky/eris-ui-preset",
  "version": "1.18.1",
  "description": "Eris UI preset",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint . --fix",
    "convert-figma-variables": "ts-node ./src/scripts/convert-figma-variables.ts && prettier ./src/theme/tokens/colors.ts --write && prettier ./src/theme/extension/theme.ts --write",
    "git-publish": "gitpkg publish",
    "release": "release-it --ci --no-git.requireUpstream"
  },
  "author": "liu.zhen@xsky.com",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "tailwindcss-animate": "^1.0.6"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./CHANGELOG.md": "./CHANGELOG.md",
    "./package.json": "./package.json"
  },
  "gitpkg": {
    "registry": "git@github.xsky.com:front-end/eris.git"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "@eris/config-release-it": "*",
    "@xsky/eris-eslint-config-ui": "*",
    "@xsky/eris-tsconfig-ui": "*",
    "eslint": "^8.53.0",
    "prettier": "3.5.3",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
